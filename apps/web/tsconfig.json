{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["apps/web/components/*"],
      "@/lib/*": ["apps/web/lib/*"],
      "@/pages/*": ["apps/web/pages/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["apps/web/types/*"],
      "@/generated/prisma/client": ["generated/prisma/client"]
    }
  },
  "include": ["apps/web/next-env.d.ts", 
              "**/*.ts", 
              "**/*.tsx", 
              ".next/types/**/*.ts",
              "apps/web/types/**/*.d.ts"
, "prisma.config.js"],
  "exclude": ["node_modules"]
}
