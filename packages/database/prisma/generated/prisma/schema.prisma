generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  // This line is essential for Vercel deployments
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Our Application Models
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  isAdmin       Boolean       @default(false)
  isBanned      Boolean       @default(false)
  createdAt     DateTime      @default(now())
  lastSeen      DateTime?     @updatedAt
  accounts      Account[]
  sessions      Session[]
  courses       UserCourses[]
  ratings       Rating[]
}

model Course {
  id           String        @id @default(cuid())
  title        String
  description  String
  price        Decimal       @db.Decimal(10, 2)
  isFree       Boolean       @default(false)
  thumbnailUrl String
  videoUrl     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  keyPositions KeyPosition[]
  users        UserCourses[]
  tags         CourseTags[]
  ratings      Rating[]
}

model KeyPosition {
  id          String  @id @default(cuid())
  fen         String // The FEN string for the position
  description String?
  course      Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId    String
}

model Tag {
  id      String       @id @default(cuid())
  name    String       @unique
  courses CourseTags[]
}

model Rating {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
}

// Join Tables for Many-to-Many Relationships
model UserCourses {
  enrolledAt        DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id])
  userId            String
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId          String
  priceAtEnrollment Decimal  @db.Decimal(10, 2)

  // The line @@id([userId, courseId]) defines the Primary Key for the 
  // UserCourses table itself. It's not the link, but the unique identifier 
  // for each row in the link table.
  @@id([userId, courseId])
}

model CourseTags {
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String
  tag      Tag    @relation(fields: [tagId], references: [id])
  tagId    String

  @@id([courseId, tagId])
}

// NextAuth Required Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
